<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="my_user_provider.class">UserBundle\Providers\UserProvider</parameter>
    </parameters>

    <services>
        <service id="app.provider.user_provider" class="%my_user_provider.class%">
            <argument type="service" id="fos_user.user_manager" />
            <argument type="collection">
                <argument key="facebook">facebookId</argument>
                <argument key="vkontakte">vkontakteId</argument>
            </argument>
            <call method="setFacebookProvider">
                <argument type="service" id="app.user.facebook_provider" />
            </call>
            <call method="setVkontakteProvider">
                <argument type="service" id="app.user.vkontakte_provider" />
            </call>
        </service>

        <service id="app.user.facebook_provider" class="AppBundle\Providers\FacebookProvider" />

        <service id="app.user.vkontakte_provider" class="AppBundle\Providers\VkontakteProvider"/>
    </services>

</container>
